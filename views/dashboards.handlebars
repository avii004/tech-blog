<div class="form-settings col-12">
  <div id="trim">
    <section id="section-create-post" class="">
      
      <h2>Create New Post</h2>

      <form class="new-post-form">
        <div class="form-group">
          <label for="post-title">TITLE</label>
          <input class="form-control" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
          <label for="post-url">LINK</label>
          <input class="form-control" id="post-url" name="post-url" />
        </div>
        <button type="submit" class="btn btn-primary form-control">CREATE</button>
      </form>
    </section>

    {{#if posts.length}}
    <section id="my-posts">
      <h2>Your Posts</h2>
      <ol>
        {{#each posts as |post|}}
        <li>
          {{> post-info post}}
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
      </ol>
    </section>
    {{/if}}
  </div>
</div>
<script src="/js/add-post.js"></script>